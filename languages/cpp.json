{
	"name": "C++",

	"scopes": {
		"single_quote_scope": {
			"style_class": "quoted",

			"patterns": {
				"'": {
					"pop": true
				},

				"\\\\.": {
					"style_class": "keyword"
				}
			}
		},

		"double_quote_scope": {
			"style_class": "quoted",

			"patterns": {
				"\"": {
					"pop": true
				},

				"\\\\.": {
					"style_class": "keyword"
				}
			}
		},

		"global": {
			"patterns": {
				"'": {
					"style_class": "quoted",
					"push": "single_quote_scope"
				},

				"\"": {
					"style_class": "quoted",
					"push": "double_quote_scope"
				},

				"\\b(const|if|else|while|do|for|switch|case|break|continue|return|operator)\\b": {
					"style_class": "keyword"
				},

				"[-+]?[0-9]*\\.?[0-9]+(?:(?:e|E)[-+]?[0-9]+)?": {
					"style_class": "number"
				},

				"\\b(true|false)\\b": {
					"style_class": "boolean-value"
				},

				"\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()": {
					"style_class": "function-call"
				},

				"\\b(double|float|long|int|short|byte|bool|char|size_t|ptrdiff_t)\\b": {
					"style_class": "primitive"
				},

				"^#[a-zA-Z][a-zA-Z0-9_]*": {
					"style_class": "preprocessor-directive"
				}
			}
		}
	}
}
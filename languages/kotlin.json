{
	"name": "Kotlin",

	"scopes": {
		"single_quote_scope": {
			"style_class": "quoted",

			"patterns": {
				"'": {
					"pop": true
				},

				"\\\\.": {
					"style_class": "keyword"
				}
			}
		},

		"double_quote_scope": {
			"style_class": "quoted",

			"patterns": {
				"\"": {
					"pop": true
				},

				"\\\\.": {
					"style_class": "keyword"
				}
			}
		},

		"global": {
			"patterns": {
				"'": {
					"style_class": "quoted",
					"push": "single_quote_scope"
				},

				"\"": {
					"style_class": "quoted",
					"push": "double_quote_scope"
				},

				"\\b(var|val|const|if|else|while|for|when|break|continue|fun|return|operator)\\b": {
					"style_class": "keyword"
				},

				"[-+]?[0-9]*\\.?[0-9]+(?:(?:e|E)[-+]?[0-9]+)?": {
					"style_class": "number"
				},

				"\\b(True|False|None)\\b": {
					"style_class": "boolean-value"
				},

				"\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()": {
					"style_class": "function-call"
				},

				"\\b(Double|Float|Long|Int|Short|Byte|Boolean|Char|String)\\b": {
					"style_class": "primitive"
				}
			}
		}
	}
}
#include <iostream>
#include <windows.h>

/**
 * Greets a person
 */
template <typename T>
void greet(T && person) {
	std::cout << "Hello, " << person << "!" << std::endl;
}

int main(int argc, const char * argv[]) {
	// for every argument
	for (size_t it = 1; it < argc; it++) {
		greet(argv[it]);
		Sleep(100);
	}
}
